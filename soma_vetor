#include <stdio.h>

int main()
{
    int n, i, soma, media, vet[50];

    printf("Quantos numeros voce vai digitar? ");
    scanf("%d",& n);

    for(i = 0; i < n; i++)
    {
        printf("Digite um numero: ");
        scanf("%d",& vet[i]);
    }

    soma = 0;

    printf("VALORES = ");
    for(i = 0; i < n; i++)
    {
        printf("%d ", vet[i]);
    }

    printf("\nSOMA = ");
    for(i = 0; i < n; i++)
    {
        soma = soma + vet[i];
    }
    printf("%d", soma);

    media = soma / n;
    printf("\nMEDIA = %d", media);

    return 0;
}
